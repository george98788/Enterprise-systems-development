<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>dbname</param-name>
        <param-value>Users</param-value>
    </context-param>
    <servlet>
        <servlet-name>UserServLet</servlet-name>
        <servlet-class>com.UserServLet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginP</servlet-name>
        <servlet-class>pages.loginP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewUser</servlet-name>
        <servlet-class>pages.NewUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>pages.Update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>com.login.controller.loginservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerRegistration</servlet-name>
        <servlet-class>pages.CustomerRegistration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>pages.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DriverDetails</servlet-name>
        <servlet-class>pages.DriverDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DriverJourneys</servlet-name>
        <servlet-class>pages.DriverJourneys</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DriverPassword</servlet-name>
        <servlet-class>pages.DriverPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServLet</servlet-name>
        <url-pattern>/UserService.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewUser</servlet-name>
        <url-pattern>/NewUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/Update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginP</servlet-name>
        <url-pattern>/loginP.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/loginservlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerRegistration</servlet-name>
        <url-pattern>/CustomerRegistration.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverDetails</servlet-name>
        <url-pattern>/DriverDetails.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverJourneys</servlet-name>
        <url-pattern>/DriverJourneys.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverPassword</servlet-name>
        <url-pattern>/DriverPassword.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
